<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_subject_tree" model="ir.ui.view">
        <field name="name">edu.subject.tree</field>
        <field name="model">edu.subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_edu_subject_form" model="ir.ui.view">
        <field name="name">edu.subject.form</field>
        <field name="model">edu.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Mô tả..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_edu_subject" model="ir.actions.act_window">
        <field name="name">Môn học</field>
        <field name="res_model">edu.subject</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
