<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_edu_course_form" model="ir.ui.view">
        <field name="name">edu.course.form</field>
        <field name="model">edu.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sessions" type="object" 
                                class="oe_stat_button" icon="fa-calendar">
                            <field name="session_count" widget="statinfo" string="Lớp học"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="subject_id"/>
                            <field name="level"/>
                        </group>
                        <group>
                            <field name="responsible_id"/>
                            <field name="fee_product_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin chung">
                            <field name="description" placeholder="Mô tả nội dung khóa học..." widget="html"/>
                        </page>
                        <page string="Danh sách lớp">
                            <field name="session_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="instructor_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_edu_course_tree" model="ir.ui.view">
        <field name="name">edu.course.tree</field>
        <field name="model">edu.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="subject_id"/>
                <field name="responsible_id"/>
                <field name="level"/>
                <field name="active"/>
                <field name="session_count"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_edu_course_search" model="ir.ui.view">
        <field name="name">edu.course.search</field>
        <field name="model">edu.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tên khóa học / Giảng viên"
                       filter_domain="['|', ('name', 'ilike', self), ('responsible_id', 'ilike', self)]"/>
                <field name="subject_id"/>
                <filter name="my_courses" string="Của tôi" domain="[('responsible_id', '=', uid)]"/>
                <filter name="archived" string="Đã đóng" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_responsible" string="Người phụ trách" context="{'group_by': 'responsible_id'}"/>
                    <filter name="group_subject" string="Chuyên ngành" context="{'group_by': 'subject_id'}"/>
                    <filter name="group_level" string="Cấp độ" context="{'group_by': 'level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_edu_course" model="ir.actions.act_window">
        <field name="name">Khóa học</field>
        <field name="res_model">edu.course</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
