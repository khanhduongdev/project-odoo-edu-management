<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_classroom_tree" model="ir.ui.view">
        <field name="name">edu.classroom.tree</field>
        <field name="model">edu.classroom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="capacity"/>
                <field name="location"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_edu_classroom_form" model="ir.ui.view">
        <field name="name">edu.classroom.form</field>
        <field name="model">edu.classroom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_edu_classroom" model="ir.actions.act_window">
        <field name="name">Phòng học</field>
        <field name="res_model">edu.classroom</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
