<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Simplified Tree View for Tuition Fee -->
    <record id="view_edu_fee_tree" model="ir.ui.view">
        <field name="name">edu.fee.tree</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Học phí">
                <field name="name" string="Tên loại phí"/>
                <field name="default_code" string="Mã phí"/>
                <field name="list_price" string="Học phí" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" column_invisible="True"/>
            </tree>
        </field>
    </record>

    <!-- Simplified Form View for Tuition Fee -->
    <record id="view_edu_fee_form" model="ir.ui.view">
        <field name="name">edu.fee.form</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Học phí">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Tên loại phí"/>
                        <h1>
                            <field name="name" placeholder="Ví dụ: Học phí khóa cơ bản"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="default_code" string="Mã phí" readonly="1" force_save="1"/>
                            <field name="list_price" string="Số tiền" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_edu_fee"/>
                            <field name="detailed_type" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả">
                            <field name="description" placeholder="Ghi chú thêm về khoản phí này..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
